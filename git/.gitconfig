[user]
	name = "LucianoDlf"
	email = "luciano.dlf@gmail.com"
[push]
	default = current
[core]
	autocrlf = input
	fileMode = false	
	editor = nvim
[alias]
	st = status
	co = checkout
	br = branch --list --color
	ci = commit
	rt = remote
	last = log -1 HEAD
	unstage = reset HEAD --
	lg = log --oneline --graph --name-only
	ll = log --pretty=format:"%h %s" --graph --color --color-words
[init]
	defaultBranch = main
[pull]
	rebase = true

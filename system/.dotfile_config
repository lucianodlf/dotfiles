#!/bin/bash

# Este archivo contiene variables de configuración compartidas que pueden ser
# utilizadas por otros scripts y archivos de configuración.
USER_NAME="LucianoDlf"
USER_EMAIL="luciano.dlf@gmail.com"

# Configuración de Git
GIT_AUTHOR_NAME="$USER_NAME"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_AUTHOR_EMAIL="$USER_EMAIL"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

# Otras configuraciones del proyecto
PROJECT_NAME="dotfiles"
PROJECT_URL="https://github.com/rafiki-dev/dotfiles"

# ---
# Rutas del proyecto
# ---

# Directorio raíz del proyecto
# Nota: Esta variable debe ser establecida por el script que la invoca.
# Ejemplo: readonly PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/.."
if [ -z "$PROJECT_DIR" ]; then
    export PROJECT_DIR="$HOME/dotfiles"
fi

export CONFIG_DIR="$PROJECT_DIR/system"
export SCRIPTS_DIR="$PROJECT_DIR/scripts"

# Archivos de configuración
export DOTFILE_CONFIG="$CONFIG_DIR/.dotfile_config"
export ALIASES_FILE="$CONFIG_DIR/.aliases"
export ENV_FILE="$CONFIG_DIR/.env"
export PKGLIST_FILE="$CONFIG_DIR/pkglist"

# Archivos de origen y destino de .bashrc
export BASHRC_SOURCE="$PROJECT_DIR/bash/.bashrc"
export BASHRC_TARGET="$HOME/.bashrc"

# Archivos de origen y destino de .zshrc
export ZSHRC_SOURCE="$PROJECT_DIR/zsh/.zshrc"
export ZSHRC_TARGET="$HOME/.zshrc"

# Archivos de origen y destino de .gitconfig
export GITCONFIG_SOURCE="$PROJECT_DIR/git/.gitconfig"
export GITCONFIG_TARGET="$HOME/.gitconfig"

# Archivos de origen y destino de .editorconfig
export EDITORCONFIG_SOURCE="$PROJECT_DIR/editors/.editorconfig"
export EDITORCONFIG_TARGET="$HOME/.editorconfig"

# Variables de Tmux
export TMUX_PLUGINS_DIR="$HOME/.tmux/plugins"
export TPM_REPO="https://github.com/tmux-plugins/tpm"
export TPM_PATH="$TMUX_PLUGINS_DIR/tpm"
export TMUX_CONF_SOURCE="$PROJECT_DIR/tmux/.tmux.conf"
export TMUX_CONF_TARGET="$HOME/.tmux.conf"

# Archivos de origen y destino de .zsh_custom
export ZSH_CUSTOM_SOURCE="$PROJECT_DIR/zsh/.zsh_custom"
export ZSH_CUSTOM_TARGET="$HOME/.zsh_custom"

# Archivos de origen y destino de .eslintrc.json y .vimrc
export ESLINTRC_SOURCE="$PROJECT_DIR/editors/.eslintrc.json"
export ESLINTRC_TARGET="$HOME/.eslintrc.json"
export VIMRC_SOURCE="$PROJECT_DIR/editors/vim/.vimrc"
export VIMRC_TARGET="$HOME/.vimrc"

# Archivos de origen y destino de .inputrc
export INPUTRC_SOURCE="$PROJECT_DIR/system/.inputrc"
export INPUTRC_TARGET="$HOME/.inputrc"

# Archivo de log
export LOG_DIR="$PROJECT_DIR/logs"
export LOG_FILE="$LOG_DIR/install-$(date +'%Y-%m-%d_%H-%M-%S').log"
